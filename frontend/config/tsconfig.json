{
  "compilerOptions": {
    "rootDir": "../../",
    "outDir": "./frontend/dist/",
    "typeRoots": ["./frontend/src/types"],
    "baseUrl": "./frontend",
    "paths": {
      "@/*": ["src/*"],
      "@": ["src"]
    },
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["../src/**/*"]
}